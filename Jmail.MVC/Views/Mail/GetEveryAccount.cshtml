@model System.Collections.Generic.IEnumerable<Jmail.Application.AccountDto.AccountDto>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}



<style>
    form {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
        max-width: 5000px;
        margin: 0 auto;
    }

    h1 {
        text-align: center;
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
        text-align: center;
    }

    .table th,
    .table td {
        border: 1px solid #ccc;
        padding: 10px;
        text-align: center;
    }

    .table th {
        background-color: #f5f5f5;
    }

    .table a {
        color: #007bff;
        text-decoration: none;
    }

    button {
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
    }

    button:hover {
        background-color: #0069d9;
    }

    /* Dodane style */
    body {
        background-color: #f8f8f8;
        color: #333;
    }

    .table {
        width: 100%;
        max-width: 1000px; /* Można dostosować maksymalną szerokość */
        table-layout: fixed;
    }

     th {
          background-color: #f5f5f5;
          color: #333;
          text-align: center;
      }
   th, td {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    tr:nth-child(even) {
        background-color: #f5f5f5;
    }
</style>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function() {
        $(".delete-button").click(function() {
            var userId = $(this).data("userid");

            if (confirm("Are you sure you want to delete this user?")) {
                $.ajax({
                    url: "/users/" + userId,
                    type: "DELETE",
                    success: function(result) {
                        // Odśwież stronę po pomyślnym usunięciu użytkownika
                        location.reload();
                    },
                    error: function(error) {
                        // Obsłuż błąd, jeśli wystąpił
                        console.log(error);
                    }
                });
            }
        });
    });
</script>

<form>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>UserName</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var account in Model)
            {
                <tr>
                    <td>@account.Id</td>
                    <td>@account.UserName</td>
                    <td>@account.Email</td>
                    <td>
                      <button type="button" class="delete-button" data-userid="@account.Id">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>
